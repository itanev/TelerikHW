@model IEnumerable<TwitterLikeSystem.Models.TweetsViewModel>

<h1>Welcome</h1>

@if (Model.Count() == 0)
{
    <h2>No Tweets yet...</h2>
}
else
{
    foreach (var tweet in Model)
    {
        <div>
            <h3>@tweet.Title</h3>
            <p>@tweet.Content</p>
            By User: <strong>@tweet.ByUser</strong>
        </div>
    }
}
