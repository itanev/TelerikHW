@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<script type="text/javascript">
    function generateFromPerson(person, prefix) {
        return  "<p>" + prefix + ": " + person.FirstName + " " + person.LastName + ", Age: " + person.Age + "</p>" +
                "<p>" + prefix + " Studio: " + person.Studio.Name + "</p>" +
                "<p>Address: " + person.Studio.Address + "</p>";
    }

    $.getJSON("/Movies/All", "", function (data) {
        var html = "";
        $(data).each(function () {
            var li = "<li>";
            li += "<h4>Title: " + this.Title + "</h4>";
            li += "<p>Year: " + this.Year + "</p>";
            li += generateFromPerson(this.Director, "Directo ");
            li += generateFromPerson(this.LeadingMale, "Leading Male Actor");
            li += generateFromPerson(this.LeadingFemale, "Leading Female Actor");
            li += "<a href='Movies/Edit/" + this.Id + "'>Edit</a> ";
            li += "<a href='Movies/Delete/" + this.Id + "'>Delete</a> ";
            li += "<a href='Movies/Details/" + this.Id + "'>Details</a>";
            li += "</li>";

            html += li;
        });

        $("#content").append(html);
    });
</script>

<ul id="content"></ul>

<div id="insert-movie"></div>

@using (Html.BeginForm("Create", "Movies", FormMethod.Get))
{
    <input type="submit" value="Create Movie" />
}


